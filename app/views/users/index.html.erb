<div class="container px-5 px-sm-0">
 <div class="row">

  <%= render 'books/index', book: @books, user: @user %>

<div class="col-md-8 offset-md-1">
<h1>Users</h1>
<table class="table table-hover table-inverse">
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>

      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    	<% @users.each do |user| %>
		<tr>
		  <td>
		     <a><%= image_tag user.get_profile_image(100,100) , size: "100x100"%></a>
         </td>
			<td><%= user.name %></td>

			<td><%= link_to "Show", user_path(user.id) %></td>
		</tr>
		<% end %>
  </tbody>
</thead>
</table>

</div>
</div>
</div>
